{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ES2020",
    "moduleResolution": "node",
    "jsx": "react",
    "lib": ["ES2020", "DOM"],
    "target": "ES2020",
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "types/*"]
    },
    "types": [
      "node",
      "react",
      "react-dom",
      "jest",
      "express",
      "socket.io",
      "jquery"
    ]
  },
  "include": [
    "client/**/*.ts",
    "client/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
} 